[Unit]
Description=RTSP streaming for Ubiquiti IP camera named %I

[Service]
Type=simple
ExecStart=/usr/bin/ffmpeg -rtsp_transport tcp -i rtsp://%i:554/s0 -c copy -f segment -strftime 1 -reset_timestamps 1 -segment_time 300 /media/sdb1/s_%i/aams2020_%Y%%m%d_%%H%M%S.avi
ExecStop=/bin/kill -INT $MAINPID
Restart=on-failure
RestartSec=30

[Install]
WantedBy=multi-user.target
